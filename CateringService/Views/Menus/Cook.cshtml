@model CateringService.Web.ViewModels.MenuVM

@{
	ViewData["Title"] = "Menu";
}

@if (Model.Menu.FoodItems.Any())
{
	<h1>Menu</h1>
	<a asp-action="Edit" asp-route-id="@Model.Menu.Id" class="btn btn-outline-primary">Edit</a>
	<div class="menu">
		@foreach (var category in Model.Categories)
		{
			<h2>@category</h2>
			foreach (var item in Model.Menu.FoodItems.Where(f => f.Category!.Name == category))
			{
				<div class="item">
					<div class="item-name">@item.Name</div>
					<div class="item-description">@item.Description</div>
					<div class="item-price">@item.Price</div>
				</div>
			}
		}
	</div>
	<div class="add-new">
		<a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> New Menu</a>
	</div>

	<form asp-action="Delete" onclick="return confirm('Are you sure you want to delete this?')">
		<input type="hidden" asp-for="@Model.Menu.Id" />
		<input type="submit" value="Delete" class="btn btn-danger" />
	</form>
}
else
{
	<h2>Menu has no items!</h2>
	<a asp-action="Edit" asp-route-id="@Model.Menu.Id" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add Items</a>
}


@section Style1{
	<style>
		body {
			font-family: Arial, sans-serif;
		}

		h1, h2, h3 {
			margin: 0;
			padding: 0;
		}

		h1 {
			font-size: 36px;
			text-align: center;
			margin-bottom: 20px;
		}

		h2 {
			font-size: 24px;
			margin-top: 20px;
			margin-bottom: 10px;
		}

		h3 {
			font-size: 18px;
			margin-top: 10px;
			margin-bottom: 5px;
		}

		.item {
			margin-bottom: 20px;
			padding: 10px;
			border: 1px solid #ddd;
			border-radius: 5px;
			display: flex;
			justify-content: space-between;
		}

		.item-name {
			font-weight: bold;
		}

		.item-description {
			margin-top: 5px;
			margin-bottom: 10px;
		}

		.item-price {
			font-size: 18px;
			font-weight: bold;
		}

		.item-button {
			margin: 10px;
			margin-top: 20px;
			margin-bottom: 20px;
			background-color: #337ab7;
			color: #fff;
			border: none;
			padding: 10px 20px;
			border-radius: 5px;
			cursor: pointer;
		}

			.item-button.added {
				background-color: transparent;
				color: #6c757d;
				border: 1px solid #6c757d;
			}

		.submit-button {
			margin-top: 10px;
			background-color: #337ab7;
			color: #fff;
			border: none;
			font-size: 14px;
			padding: 3px 8px;
			border-radius: 5px;
			cursor: pointer;
		}

			.submit-button:hover {
				background-color: #23527c;
			}

		.add-new {
			position: fixed;
			right: 25px;
			bottom: 25px;
		}
	</style>
	}
