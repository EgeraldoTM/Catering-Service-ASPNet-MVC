@using CateringService.Core;
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CateringService</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/united-bootstrap.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/CateringService.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/typeahead.css" />
	<link rel="stylesheet" href="~/lib//toastr.js/toastr.css" />
	<link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
	<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Amatic+SC">
	<style>
		.body{
			background-image: url('~/images/vintage-old-rustic-cutlery-dark.jpg');
		}
	</style>
	@RenderSection("Style1", required: false)
	@RenderSection("Style3", required: false)
	@RenderSection("Login", required: false)
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand">Catering</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-controller="FoodItems" asp-action="Index">Food Items</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-controller="Menus" asp-action="Index">Menu</a>
						</li>
						@if (User.IsInRole(RoleName.Employee))
						{
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-controller="Orders" asp-action="Index">My Orders</a>
							</li>
						}
					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2023 - CateringService
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/lib/typeahead.js/bloodhound.js" asp-append-version="true"></script>
	<script src="~/lib/typeahead.js/bloodhound.min.js" asp-append-version="true"></script>
	<script src="~/lib/typeahead.js/typeahead.bundle.js" asp-append-version="true"></script>
	<script src="~/lib/typeahead.js/typeahead.bundle.min.js" asp-append-version="true"></script>
	<script src="~/lib/typeahead.js/typeahead.jquery.js" asp-append-version="true"></script>
	<script src="~/lib/typeahead.js/typeahead.jquery.min.js" asp-append-version="true"></script>
	<script src="~/lib/toastr.js/toastr.min.js" asp-append-version="true"></script>
	<script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js" asp-append-version="true"></script>
	<script src="~/lib/bootbox.js/bootbox.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
